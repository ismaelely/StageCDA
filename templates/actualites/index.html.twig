{% extends 'base.html.twig' %}

{% block title %}Actualites{% endblock %}

{% block body %}
    <!-- =======================
Page Banner START -->
    <section class="bg-blue align-items-center d-flex" style="background:url(assets/images/pattern/04.png) no-repeat center center; background-size:cover;">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <!-- Title -->
                    <h1 class="text-white">Actualites</h1>
                    <!-- Breadcrumb -->
                    <div class="d-flex justify-content-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
                                <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Actualite</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =======================
    Page Banner END -->
    <!-- =======================
    Page content START -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Main content START -->
                <div class="">

                    <!-- Course Grid START -->
                    <div class="row g-4">

                        {% for actualites in actualites %}
                            <!-- Card item START -->
                            <div class="col-sm-6 col-xl-4" >
                                <div class="card shadow h-100">
                                    <!-- Image -->
                                    <div class="card-body pb-0">
                                        <!-- Badge and favorite -->
                                        <div class="d-flex justify-content-between mb-2">
                                            <a href="#" class="badge bg-warning bg-opacity-10 text-warning">Actu</a>
                                        </div>
                                        <!-- Title -->
                                        <h5 class="card-title"><a href="#">{{ actualites.title|u.truncate(50, '...', false) }}</a></h5>
                                        <p class="mb-2 text-truncate-2">{{ actualites.description }}</p>
                                    </div>
                                    <!-- Card footer -->
                                    <div class="card-footer pt-0 pb-3">
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <span class="h6 fw-light mb-0"><i class="far fa-clock text-danger me-2"></i>{{ actualites.date|date('d-m-Y') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card item END -->
                        {% endfor %}
                    </div>
                    <!-- Course Grid END -->
                    <br>
                    <br>

                    <!-- Pagination START -->
                    <div class="col-12">
                        <nav class="mt-4 d-flex justify-content-center" aria-label="navigation">
                            {% do actualites.setPageRange(1) %}
                            {{ knp_pagination_render(actualites, 'main/pagination.html.twig') }}
                        </nav>
                    </div>
                    <!-- Pagination END -->
                </div>
            </div><!-- Row END -->
        </div>
    </section>
    <!-- =======================
    Page content END -->
{% endblock %}
